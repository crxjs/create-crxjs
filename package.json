{
  "name": "create-crxjs",
  "type": "module",
  "version": "0.2.6",
  "packageManager": "pnpm@10.6.5",
  "author": "FliPPeDround <flippedround@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/crxjs/create-crxjs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crxjs/create-crxjs"
  },
  "bugs": {
    "url": "https://github.com/crxjs/create-crxjs/issues"
  },
  "bin": {
    "create-crxjs": "dist/index.mjs"
  },
  "files": [
    "dist/index.mjs",
    "template-*"
  ],
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || >=22.0.0"
  },
  "scripts": {
    "dev": "unbuild --stub",
    "build": "unbuild",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "lint": "eslint",
    "test": "vitest",
    "lint:fix": "eslint --fix",
    "release": "bumpp",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@clack/prompts": "^0.10.0",
    "@eslint-react/eslint-plugin": "^1.37.3",
    "@types/node": "^22.13.13",
    "bumpp": "^10.1.0",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-solid": "^0.14.5",
    "eslint-plugin-svelte": "^3.3.3",
    "execa": "^9.5.2",
    "lint-staged": "^15.5.0",
    "mri": "^1.2.0",
    "picocolors": "^1.1.1",
    "rollup": "^4.37.0",
    "rollup-plugin-license": "^3.6.0",
    "simple-git-hooks": "^2.12.1",
    "svelte": "^5.33.2",
    "svelte-eslint-parser": "^1.1.0",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vitest": "^3.0.9"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
